<h2>Candiatures envoyées</h2>

<% @candidatures.each do |candidature| %>
  <p><%= candidature.annonce.titre_annonce %></p>
  <p>de <%= candidature.user.prénom %> <%= candidature.user.nom %></p>
  <p>à <%= candidature.annonce.user.prénom %> <%= candidature.annonce.user.nom %></p>
  <p><%= candidature.statut %></p>
  <p>-------------------------------------</p>
<% end %>


<h2>Candidatures reçues</h2>

<% @annonces.each do |annonce| %>
  <% annonce.candidatures.each do |candidature| %>
    <% if candidature.statut == "pending" %>
      <p><%= candidature.annonce.titre_annonce %></p>
      <p>de <%= candidature.user.prénom %> <%= candidature.user.nom %></p>
      <p>à <%= candidature.annonce.user.prénom %> <%= candidature.annonce.user.nom %></p>
      <p><%= candidature.statut %></p>
      <p><%= link_to "Accepter" , accept_candidature_path(candidature), method: :post, data: { confirm: 'Etes-vous sûr de vouloir accepter? Le montant à payer en cas de location sera 350 euros' }, class: "" %></p>
      <p><%= link_to "Rejeter" , reject_candidature_path(candidature), method: :post, data: { confirm: 'Etes-vous sûr de vouloir rejeter la candidature?' }, class: "" %></p>
      <p>-------------------------------------</p>
    <% end %>
  <% end %>
<% end %>

<h2>Candidatures acceptées</h2>

<% @annonces.each do |annonce| %>
  <% annonce.candidatures.each do |candidature| %>
    <% if candidature.statut == "accepté" %>
      <p><%= candidature.annonce.titre_annonce %></p>
      <p>de <%= candidature.user.prénom %> <%= candidature.user.nom %></p>
      <p>à <%= candidature.annonce.user.prénom %> <%= candidature.annonce.user.nom %></p>
      <p><%= candidature.statut %></p>
      <p>-------------------------------------</p>
    <% end %>
  <% end %>
<% end %>

<h2>Candidatures rejetés</h2>

<% @annonces.each do |annonce| %>
  <% annonce.candidatures.each do |candidature| %>
    <% if candidature.statut == "rejeté" %>
      <p><%= candidature.annonce.titre_annonce %></p>
      <p>de <%= candidature.user.prénom %> <%= candidature.user.nom %></p>
      <p>à <%= candidature.annonce.user.prénom %> <%= candidature.annonce.user.nom %></p>
      <p><%= candidature.statut %></p>
      <p>-------------------------------------</p>
    <% end %>
  <% end %>
<% end %>
