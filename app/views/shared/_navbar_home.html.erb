<div class="navbar navbar-expand-lg navbar-light navbar-lewagon hide-on-mobile fixed-top py-0", style="">
  <%= link_to root_path, class: "navbar-brand" do %>
    <div class="d-flex align-items-center" style="">
      <%= image_tag "logo_rb.png", style: "width:30px", class: "pb-1" %>
      <%#= image_tag "logo_text.png", class: "ml-2", style: "width: 140px" %>
      <p class="ml-2 mb-0 p-0" style="font-family: Simply Rounded"><span style="color:white; font-size: 35px">Real</span></p>
      <p class="mb-0 p-0" style="color:#D8A727; font-size: 35px; font-family: Simply Rounded">beez</p>
    </div>
  <% end %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <%= link_to "Agents", profiles_path, class: "nav-link hide-on-mobile nav-white", style:"" %>
      </li>
      <li class="nav-item">
        <%= link_to "Annonces", annonces_path, class: "nav-link hide-on-mobile nav-white", style:"" %>
      </li>
      <li class="nav-item">
        <%= link_to "Tarifs", details_path, class: "nav-link hide-on-mobile nav-white", style:"" %>
      </li>
      <li class="nav-item">
        <%= link_to "Publier une annonce", new_annonce_path, class: "nav-link hide-on-mobile nav-white", style:"" %>
      </li>
      <li class="nav-item d-flex align-items-center">
        <%= link_to "Devenir agent Realbeez", new_agent_path, class: "nav-link hide-on-mobile nav-white", style:"", class:"btn btn-transparent-bold-yellow" %>
      </li>
      <% if user_signed_in? %>
        <!-- =============Messages================ -->
        <div class="d-flex align-items-center p-2">
          <li class="d-flex align-items-center"><%= link_to "", conversations_path, class:"fas fa-envelope", style:"color:white; font-size: 20px" %></li>
          <div id="message-count">
            <!--  class="border text-center mb-3" style="font-size: 12px; border-radius:50%; background-color: red; height:20px; width:20px; color:white; font-weight: bold; z-index: 1;" -->
          </div>
        </div>
        <!--============= NOTIFICATIONS================ -->
        <div class="d-flex p-2 align-items-center">
          <div class="dropdown">
            <button class="btn btn-secondary dropdown-toggle p-0 d-flex align-items-center" style="background-color: transparent; border-color: transparent;" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <i class="fas fa-bell" style="font-size: 20px; "></i>
            </button>
            <div id="notification-start" class="dropdown-menu dropdown-menu-right" style="" aria-labelledby="dropdownMenuButton">
              <!-- <a  class="dropdown-item" href="#"></a> -->
              <%= link_to "Voir toutes les notifications", all_notifications_path, class:"pl-4 dropdown-item", style:"" %>
            </div>
          </div>
          <div id="notification-count">
            <!-- class="border text-center mb-3" style="font-size: 12px; border-radius:50%; background-color: red; height:20px; width:20px; color:white; font-weight: bold; z-index: 1" -->
          </div>
        </div>
        <!-- =========================================== -->
        <li class="nav-item dropdown">
          <%#= cl_image_tag current_user.photo, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="nav-link dropdown-toggle p-0 m-0" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <%= image_tag (cl_image_path current_user.photo), crop: :fill, style: "height: 40px; width: 40px; object-fit: cover; border-radius: 50%" %>
          </div>
          <!-- PROFILE DROPDOWN -->
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Profile", profile_path(current_user), class: "dropdown-item" %>
            <%#= link_to "Mon réseau", my_friends_path, class: "dropdown-item" %>
            <% if current_user.annonces !=  [] %>
              <div class="border-top">
                <p class="text-center mt-2 mb-0" style="font-weight: bold; color: #D8A727">Propriétaire</p>
                <%= link_to "Mes annonces", mes_annonces_path, class: "dropdown-item" %>
                <%= link_to "Visites de mes agents", meetings_path(visites: {from: 'proprio'}), class: "dropdown-item" %>
                <%= link_to "Candidatures d'agents", candidature_proprio_path, class: "dropdown-item" %>
                <%= link_to "Mes paiements", orders_path, class: "dropdown-item" %>
              </div>
            <% end %>
            <% if current_user.statut == "Agent" %>
              <div class="border-top">
                <p class="text-center mt-2 mb-0" style="font-weight: bold; color: #D8A727">Agent Realbeez</p>
                <%= link_to "Mes biens à gérer", biens_a_gerer_path, class: "dropdown-item" %>
                <%= link_to "Mes visites", meetings_path, class: "dropdown-item" %>
                <%= link_to "Mes candidatures", candidature_agent_path, class: "dropdown-item" %>
              </div>
            <% end %>
            <% if current_user.admin == true %>
              <div class="border-top">
                <p class="text-center mt-2 mb-0" style="font-weight: bold; color: #D8A727">Administrateur</p>
                <%= link_to "Candidatures agents Realbeez", agents_path, class: "dropdown-item" %>
                <%= link_to "Voir tous les utilisateurs", profile_all_users_path, class: "dropdown-item" %>
                <%= link_to "Voir toutes les candidatures", candidature_all_path, class: "dropdown-item" %>
              </div>
            <% end %>
            <%= link_to "Se déconnecter", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Se connecter", new_user_session_path, class: "nav-link hide-on-mobile", style:"color:white; font-weight:bold" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>