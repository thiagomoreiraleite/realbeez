
<div class="container">
  <p id="notice"><%= notice %></p>

  <p class="text-center my-5" style="font-weight: bold; font-size: 24px;">Calendrier des visites</p>

  <table>
    <thead>
      <tr>
        <th>Date</th>
        <th>Heure</th>
        <th>Adresse</th>
        <th>Ville</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @meetings.each do |meeting| %>
        <tr>
          <td><%= meeting.start_time.strftime("%d/%m/%Y") %></td>
          <td><%= meeting.start_time.strftime("%l:%M") %></td>
          <td><%= meeting.annonce.adresse %></td>
          <td><%= meeting.annonce.ville %></td>
          <td><%= link_to 'Show', meeting %></td>
          <td><%= link_to 'Edit', edit_meeting_path(meeting) %></td>
          <td><%= link_to 'Destroy', meeting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Meeting', new_meeting_path %>
</div>
