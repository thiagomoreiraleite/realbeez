<div class="container center mb-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-6 col-lg-6">
      <div class="center">
        <h3 class="text-center mt-5 mb-5">Modifier votre visite</h3>
        <p style="font-weight: bold">Annonce : <%= @meeting.annonce.titre_annonce %></p>
        <%= simple_form_for(@meeting) do |f| %>
          <%= f.error_notification %>
          <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
          <div class="form-inputs">
            <%= f.input :name, label: "Titre" %>
            <%= f.input :start_time, as: :string, input_html: { class: "datetimepicker"}, label: "Date et heure" %>
            <%#= f.input :annonce_id, label: "Choisir l'annonce:", include_blank: false, collection: @annonces,label_method: :titre_annonce, value_method: :id%>
          </div>
          <div class="form-actions mt-4">
            <%#= f.button :submit %>
            <%= f.submit "Modifier votre visite", class: "btn btn-yellow-mustard mb-3"%>
          </div>
        <% end %>
        <%= link_to 'Retour', meetings_path %>
      </div>
    </div>
  </div>
</div>