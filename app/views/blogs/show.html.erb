<% if @blog.statut == "active" %>
  <!-- Global site tag (gtag.js) - Google Analytics -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=UA-157808077-1"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
    
    gtag('config', 'UA-157808077-1');
  </script>
  <!-- LAPTOP VERSION -->
  <div class="hide-on-small">
    <% unless @blog.photo_url == "http://res.cloudinary.com/dvfwroq5k/image/upload/v1582613499/default_annonce.png" %>
      <div class="d-flex align-items-center justify-content-center" style="height: 60vh; background-size: cover; background-position: center; background-image:linear-gradient(rgba(0,0,0,0.2), rgba(0,0,0,0.1)), url('<%= cl_image_path @blog.photo_url %>')">
        <h3 style="color: white; font-family: simply rounded; font-size: 26px" class="text-center px-1"><%= @blog.titre %>
          <% if current_user.admin == true %>
            <%= link_to "",edit_blog_path(@blog), class:"fas fa-edit ml-2", style:"font-size:14px" %>
            <span style="font-size: 14px">/</span>
            <%= link_to '', blog_path(@blog), method: :delete, data: { confirm: 'Confirmez la suppression de l article' }, class:"fas fa-trash", style:"font-size:14px" %>
          <% end %>
        </h3>
      </div>
    <% else %>
      <div class="d-flex align-items-center justify-content-center" style="height: 60vh; background-size: cover; background-position: center; background-image:linear-gradient(rgba(0,0,0,0.2), rgba(0,0,0,0.1))">
        <h3 style="color: white; font-family: simply rounded; font-size: 26px" class="text-center px-1"><%= @blog.titre %>
          <% if current_user.admin == true %>
            <%= link_to "",edit_blog_path(@blog), class:"fas fa-edit ml-2", style:"font-size:14px" %>
            <span style="font-size: 14px">/</span>
            <%= link_to '', blog_path(@blog), method: :delete, data: { confirm: 'Confirmez la suppression de l article' }, class:"fas fa-trash", style:"font-size:14px" %>
          <% end %>
        </h3>
      </div>
    <% end %>
  </div>
  <!-- MOBILE VERSION -->
  <div class="hide-on-large">
    <% unless @blog.photo_url == "http://res.cloudinary.com/dvfwroq5k/image/upload/v1582613499/default_annonce.png" %>
      <div class="" style="height: 60vh; background-size: cover; background-position: center; background-image:linear-gradient(rgba(0,0,0,0.2), rgba(0,0,0,0.1)), url('<%= cl_image_path @blog.photo %>')">
        <div class="text-center pt-3 d-flex justify-content-center">
          <%= link_to "Louer mon bien", new_contact_path, class: "nav-link hide-on-mobile nav-white", style:"", class:"btn btn-transparent-bold-white" %>
        </div>
        <div class="text-center pt-3 d-flex align-items-center justify-content-center" style="height: 36vh">
          <h3 style="color: white; font-family: simply rounded; font-size: 26px" class="text-center px-4"><%= @blog.titre %>
            <% if current_user.admin == true %>
              <%= link_to "",edit_blog_path(@blog), class:"fas fa-edit ml-2", style:"font-size:14px" %>
              <span style="font-size: 14px">/</span>
              <%= link_to '', blog_path(@blog), method: :delete, data: { confirm: 'Confirmez la suppression de l article' }, class:"fas fa-trash", style:"font-size:14px" %>
            <% end %>
          </h3>
        </div>
      </div>
    <% else %>
      <div class="" style="height: 60vh; background-size: cover; background-position: center; background-image:linear-gradient(rgba(0,0,0,0.2), rgba(0,0,0,0.1))">
        <div class="text-center pt-3 d-flex justify-content-center">
          <%= link_to "Louer mon bien", new_contact_path, class: "nav-link hide-on-mobile nav-white", style:"", class:"btn btn-transparent-bold-white" %>
        </div>
        <div class="text-center pt-3 d-flex align-items-center justify-content-center" style="height: 36vh">
          <h3 style="color: white; font-family: simply rounded; font-size: 26px" class="text-center px-4"><%= @blog.titre %>
            <% if current_user.admin == true %>
              <%= link_to "",edit_blog_path(@blog), class:"fas fa-edit ml-2", style:"font-size:14px" %>
              <span style="font-size: 14px">/</span>
              <%= link_to '', blog_path(@blog), method: :delete, data: { confirm: 'Confirmez la suppression de l article' }, class:"fas fa-trash", style:"font-size:14px" %>
            <% end %>
          </h3>
        </div>
      </div>
    <% end %>
  </div>
  <div class="pb-5" style="background-color: white">
    <div class="container">
      <div class="row">
        <div class="col-12 col-md-8 offset-md-2 text-justify px-4" style="line-height: 1.8em">
          <p style="font-size: 12px">Publié le <%= @blog.date.strftime("%d/%m/%Y") %></p>
          <p class="mt-3 my-5 pt-3"><%= @blog.intro %>
          </p>
          <%= render 'blogs/paragraph' %>
          <%= simple_format(@blog.texte_7) %>
          <% unless @blog.disclaimer == nil || @blog.disclaimer == ""  %>
            <p class="mt-5 border-top" style="font-style: italic; font-size: 12px"><%= @blog.disclaimer %></p>
          <% end %>
          <div class="border p-3 mt-5" style="box-shadow: 1px 1px 5px rgba(0,0,0,0.1)">
            <h1 class="mb-4 mt-3 text-left" style="color: #D8A727; font-family: Simply Rounded; font-size: 24px; letter-spacing: 1px">Trouvez rapidement un locataire pour votre bien immobilier</h1>
            <p class="mb-2" style="color: rgb(100, 100, 100); font-size: 16px; font-weight: bold">Un forfait fixe à <span style="font-size: 18px; color: #D8A727">375 €</span> sans aucune contrainte !</p>
            <ul class="mb-4">
              <li class="" style="color: rgb(100, 100, 100)">payable uniquement au succès</li>
              <li class="" style="color: rgb(100, 100, 100)">un prix réduit pour les locataires</li>
              <li class="" style="color: rgb(100, 100, 100)">un mandat non-exclusif</li>
            </ul>
            <div class="d-flex justify-content-center">
              <%= link_to "Louer mon bien", root_path, class:"btn-transparent-bold"  %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% else %>
  <h4 class="text-center mt-5" style="width: 100%; color:#DA334A; font-style: italic">"Cet article a été supprimé"</h4>
<% end %>