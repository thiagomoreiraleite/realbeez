<div class="border p-4 mb-5" style="background-color: white; border-radius: 5px; box-shadow: 0 0 8px rgba(0,0,0,0.1)">
  <!-- AUTRES DOCUMENTS -->
  <p style="color: #D8A727; font-weight: bold">RESUME</p>
  <p class="mb-1"><strong>Locataire principal :</strong></p>
  <ul>
    <li>
      <p class="mb-1"><%= @locataire.prenom.capitalize %> <%= @locataire.nom.capitalize %> est actuellement
        <% if @locataire.activite != "autre" %>
          <%= @locataire.activite %>
        <% end %>
        <% if @locataire.activite == "autre" %>
          <%= @locataire.activite_autre %>
        <% end %>
        <% if @locataire.type_contrat != "n/a" %>
          <%= @locataire.type_contrat %>
        <% end %>
      </p>
    </li>
    <li>
      <p class="">Ses revenus nets mensuels s'élèvent à <%= @locataire.revenus %> €</p>
    </li>
  </ul>
  <!-- COLOCATAIRE -->
  <% if @locataire.locataire_supplementaires != [] %>
    <% @locataire.locataire_supplementaires.each do |l| %>
      <p class="mb-1"><strong>Colocataire :</strong></p>
      <ul>
        <li>
          <p class="mb-1"><%= l.prenom.capitalize %> <%= l.nom.capitalize %> est actuellement
            <% if l.activite != "autre" %>
              <%= l.activite %>
            <% end %>
            <% if l.activite == "autre" %>
              <%= l.activite_autre %>
            <% end %>
            <% if l.type_contrat != "n/a" %>
              <%= l.type_contrat %>
            <% end %>
          </p>
        </li>
        <li>
          <p class="">Ses revenus nets mensuels s'élèvent à <%= l.revenus %> €</p>
        </li>
      </ul>
    <% end %>
  <% end %>
  <p><strong>Garant (caution solidaire) : </strong></p>
  <ul>
    <li>
      <p class="mb-1"><%= @locataire.prenom_garant.capitalize %> <%= @locataire.nom_garant.capitalize %> est actuellement
        <% if @locataire.activite_garant != "autre" %>
          <%= @locataire.activite_garant %>
        <% end %>
        <% if @locataire.activite_garant == "autre" %>
          <%= @locataire.activite_autre_garant %>
        <% end %>
        <% if @locataire.type_contrat_garant != "n/a" %>
          <%= @locataire.type_contrat_garant %>
        <% end %>
      </p>
    </li>
    <li>
      <p class="">Ses revenus nets mensuels s'élèvent à <%= @locataire.revenus_garant %> €</p>
    </li>
  </ul>
</div>