<!-- LAPTOP VERSION -->
<div class="hide-on-small">
  <div class="d-flex align-items-center justify-content-center" style="height: 60vh; background-size: cover; background-position: center; background-image:linear-gradient(rgba(0,0,0,0.2), rgba(0,0,0,0.1)), url('<%= cl_image_path "https://images.unsplash.com/photo-1512314889357-e157c22f938d?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1502&q=80" %>')">
    <div >
      <h3 style="color: white; font-family: simply rounded; font-size: 26px" class="text-center px-2">Nos fiches pratiques</h3>
    </div>
  </div>
</div>
<!-- MOBILE VERSION -->
<div class="hide-on-large">
  <div class="" style="height: 60vh; background-size: cover; background-position: center; background-image:linear-gradient(rgba(0,0,0,0.2), rgba(0,0,0,0.1)), url('<%= cl_image_path "https://images.unsplash.com/photo-1512314889357-e157c22f938d?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1502&q=80" %>')">
    <div class="text-center pt-3 d-flex justify-content-center">
      <%= link_to "Louer mon bien", new_contact_path, class: "nav-link hide-on-mobile nav-white", style:"", class:"btn btn-transparent-bold-white" %>
    </div>
    <div class="text-center pt-3 d-flex align-items-center justify-content-center" style="height: 36vh">
      <h3 style="color: white; font-family: simply rounded; font-size: 26px" class="text-center px-2">Nos fiches pratiques</h3>
    </div>
  </div>
</div>
<div class="container my-5">
  <% if user_signed_in? %>
    <% if current_user.statut == "Agent" || current_user.admin == true  %>
      <div class="row mb-4">
        <div class="col-12 col-md-10 offset-md-1">
          <div class="card" style="border-radius: 10px; box-shadow: 0 0 8px rgba(0,0,0,0.1)">
            <div class="card-body">
              <h5 class="card-title">Le guide du consultant en immobilier <span style="font-size: 12px">(version du 02/02/2020)</span></h5>
              <p class="card-text text-truncate" style="color: rgba(0, 0, 0, 0.5) ">Retrouvez la procédure détaillée des activités du consultant en immobilier Realbeez.
              </p>
              <%= link_to "Télécharger", "https://res.cloudinary.com/dvfwroq5k/image/upload/fl_attachment/v1580700407/Guide_de_l_agent_Realbeez_version_02022020_eixokh.pdf",class: "btn btn-transparent stretched-link" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
  <div class="row mb-4">
    <div class="col-12 col-md-10 offset-md-1">
      <div class="card" style="border-radius: 10px; box-shadow: 0 0 8px rgba(0,0,0,0.1)">
        <div class="card-body">
          <h5 class="card-title">Le guide de l'utilisateur <span style="font-size: 12px">(version du 02/02/2020)</span></h5>
          <p class="card-text text-truncate" style="color: rgba(0, 0, 0, 0.5) ">Retrouvez une présentation détaillée de notre plateforme et de son utilisation.
          </p>
          <%= link_to "Télécharger", "https://res.cloudinary.com/dvfwroq5k/image/upload/fl_attachment/v1580700419/Guide_de_l_utilisateur_version_02022020_rzdb2j.pdf",class: "btn btn-transparent stretched-link" %>
        </div>
      </div>
    </div>
  </div>
  <div class="row mb-4">
    <div class="col-12 col-md-10 offset-md-1">
      <div class="card" style="border-radius: 10px; box-shadow: 0 0 8px rgba(0,0,0,0.1)">
        <div class="card-body">
          <h5 class="card-title">Modèles de contrats de location <span style="font-size: 12px">(publié le 31/01/2020)</span></h5>
          <p class="card-text text-truncate" style="color: rgba(0, 0, 0, 0.5) ">Téléchargez gratuitement nos modèles de contrats de location conformes à la loi Alur.
          </p>
          <%= link_to "Location vide", "https://res.cloudinary.com/dvfwroq5k/image/upload/fl_attachment/v1580301673/Contrat_de_location_non-meublé_h9sbnl.pdf",class: "btn btn-transparent" %>
          <%= link_to "Location meublé", "https://res.cloudinary.com/dvfwroq5k/image/upload/fl_attachment/v1580301675/Contrat_de_location_meublé_zazuus.pdf",class: "btn btn-transparent" %>
        </div>
      </div>
    </div>
  </div>
  <div class="row mb-4">
    <div class="col-12 col-md-10 offset-md-1">
      <div class="card" style="border-radius: 10px; box-shadow: 0 0 8px rgba(0,0,0,0.1)">
        <div class="card-body">
          <h5 class="card-title">Information utile sur le statut d’auto-entrepreneur <span style="font-size: 12px">(publié le 27/12/2019)</span>
          </h5>
          <p class="card-text text-truncate font-weight-light" style="color: rgba(0, 0, 0, 0.5) ">L’auto-entreprise est une entreprise individuelle qui relève du régime fiscal de la micro-entreprise et du régime micro-social pour le paiement des cotisations et contributions sociales.
          </p>
          <%= link_to "Plus d'information", statut_auto_entrepreneur_path,class: "btn btn-transparent stretched-link" %>
        </div>
      </div>
    </div>
  </div>
  <div class="row mb-4">
    <div class="col-12 col-md-10 offset-md-1">
      <div class="card" style="border-radius: 10px; box-shadow: 0 0 8px rgba(0,0,0,0.1)">
        <div class="card-body">
          <h5 class="card-title">Demandez le statut d’auto-entrepreneur et devenez consultant en immobilier <span style="font-size: 12px">(publié le 23/12/2019)</span></h5>
          <p class="card-text text-truncate" style="color: rgba(0, 0, 0, 0.5) ">Suivez la procédure détaillée afin d’obtenir le statut d’auto-entrepreneur (inscription gratuite).
          </p>
          <%= link_to "Télécharger gratuitement", "https://res.cloudinary.com/dvfwroq5k/image/upload/fl_attachment/v1571109367/Devenir_auto-entrepreneur_xhr9av.pdf",class: "btn btn-transparent stretched-link" %>
        </div>
      </div>
    </div>
  </div>
</div>