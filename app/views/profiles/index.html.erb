<div class="container mb-5">
  <div class="search" id="buddies-index-searchbar">
    <div class="d-flex align-items-center justify-content-center mt-5 mb-4">
      <h3 class="text-center" style="margin-bottom: 0px">Trouver un Agent Realbeez </h3>
      <p class="ml-3 my-0 " style="font-size:16px"><%= render "shared/info_proprio" %></p>
    </div>
    <div class="text-center mr-0" id="form-search">
      <!-- Search_bar -->
      <nav class="navbar navbar-light justify-content-around">
        <%= form_for :search, defaults: { required: false }, url:profiles_path, method: "GET", html: { class: '' } do |f| %>
          <section style="position: relative; text-align:center;">
            <%= f.text_field :query, label: false, placeholder: "Entrer votre adresse", input_html: {value: ""}, style: "width: 20em; border-radius: 9999px; border-style: none; height: 2.5em; margin-left: auto; margin-right: auto; left: 0; right: 0; padding-left: 16px; opacity: 0.8;" %>
          </section>
          <section style=" text-align:center;">
            <%= f.submit "Let's go!", class: "btn-yellow-mustard-big my-3" %>
          </section>
        <% end %>
      </nav>
    </div>
    <p class="border-top my-3 pt-2" style="color: rgb(150, 150, 150);"><em>Nombre d'agents trouvés (<%= @profiles.count %>)</em></p>
  </div>
  <div class="row justify-content-center" id="profile-index-buddy">
    <% if @profiles != [] %>
      <% if current_user.nil? %>
        <% @profiles.each do |profile| %>
          <div class="col-sm-8 offset-lg-0 col-lg-6">
            <div class="card mb-3 border-0" style="border-radius: 15px; box-shadow: 1px 1px 5px rgba(0,0,0,0.2);">
              <div class="row no-gutters", style="border-radius: 30px">
                <div class="col-4">
                  <p class="mb-0"><%= image_tag (cl_image_path profile.photo), crop: :fill, style:"object-fit:cover; height: 170px; width: 170px", class: "rounded-circle center p-3" %></p>
                </div>
                <div class="col-8 d-flex flex-column justify-content-between">
                  <div class="card-body ml-4">
                    <div>
                      <h5 class="card-title"><%= profile.prénom.titlecase %> <%= profile.nom[0].titlecase+"." %> </h5>
                      <p class="card-text"><%= profile.ville.titlecase %></p>
                    </div>
                    <div class="mt-3">
                      <%# unless profile.friends.any? { |f| f == current_user } %>
                      <%# if profile.requested_friends.any? { |f| f == current_user } %>
                      <%#= link_to "En cours", add_friend_path(profile), method: :post, class: "disabled btn btn-secondary  " %>
                      <%# else %>
                      <%= link_to "Sélectionner", profile_path(profile), class: "btn btn-transparent" %>
                      <%# end %>
                      <%# end %>
                      <%#= link_to "Message", "", class: "btn btn-primary" %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      <% else %>
        <% @profiles.each do |profile| %>
          <% if profile.id != current_user.id%>
            <div class="col-sm-8 offset-lg-0 col-lg-6">
              <div class="card mb-3 border-0" style="border-radius: 15px; box-shadow: 1px 1px 5px rgba(0,0,0,0.2);">
                <div class="row no-gutters", style="border-radius: 30px">
                  <div class="col-4">
                    <p class="mb-0"><%= image_tag (cl_image_path profile.photo), crop: :fill, style:"object-fit:cover; height: 170px; width: 170px", class: "rounded-circle center p-3" %></p>
                  </div>
                  <div class="col-8 d-flex flex-column justify-content-between">
                    <div class="card-body ml-4">
                      <div>
                        <h5 class="card-title"><%= profile.prénom.titlecase %> <%= profile.nom[0].titlecase+"." %></h5>
                        <p class="card-text"><%= profile.ville %></p>
                      </div>
                      <div class="mt-3">
                        <%# unless profile.friends.any? { |f| f == current_user } %>
                        <%# if profile.requested_friends.any? { |f| f == current_user } %>
                        <%#= link_to "En cours", add_friend_path(profile), method: :post, class: "disabled btn btn-secondary  " %>
                        <%# else %>
                        <%= link_to "Sélectionner", profile_path(profile), class: "btn btn-transparent" %>
                        <%# end %>
                        <%# end %>
                        <%#= link_to "Message", "", class: "btn btn-primary" %>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      <% end %>
      <!-- Mapbox map -->
      <div class="container mt-5">
        <div class="mb-5 d-flex justify-content-around">
          <%= will_paginate @annonces, :page_links => true %>
        </div>
        <div
        id="map"
        style="width: 100%;
        height: 600px;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
      </div>
    <% else %>
      <div class="container">
        <h4 class="text-center mt-4 pb-5 mb-5" style="width: 100%; color:#DA334A; font-style: italic;">"Aucun agent trouvé dans votre secteur"</h4>
