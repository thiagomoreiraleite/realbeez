<div class="container">
  <div class="search" id="buddies-index-searchbar">
    <h3 class="text-center mt-5 mb-4" style="margin: 10vh 0 4vh;">Voir concierge près de chez vous</h3>
    <div class="text-center mr-0" id="form-search">
      <!-- Search_bar -->
       <nav class="navbar navbar-light justify-content-around">
         <%= form_for :search, defaults: { required: false }, url:profiles_path, method: "GET", html: { class: '' } do |f| %>
           <section style="position: relative; text-align:center;">
             <%= f.text_field :query, label: false, placeholder: "Entrer votre adresse", input_html: {value: ""}, style: "width: 19em; border-radius: 9999px; border-style: none; height: 2.5em; margin-left: auto; margin-right: auto; left: 0; right: 0; padding-left: 16px; opacity: 0.8;" %>
           </section>
         <% end %>
       </nav>
    </div>
  </div>
  <div class="row justify-content-center" id="profile-index-buddy">
    <% if @profiles != [] %>
      <% if current_user.nil? %>
        <% @profiles.each do |profile| %>
          <div class="col-sm-8 offset-lg-0 col-lg-6">
            <div class="card mb-3 border-0" style="border-radius: 15px; box-shadow: 1px 1px 5px rgba(0,0,0,0.2);">
              <div class="row no-gutters", style="border-radius: 30px">
                <div class="col-md-4">
                  <p class="mb-0"><%= image_tag (cl_image_path profile.photo), crop: :fill, style:"object-fit:cover; height: 170px; width: 170px", class: "rounded-circle center p-3" %></p>
                </div>
                <div class="col-md-8 d-flex flex-column justify-content-between">
                  <div class="card-body">
                    <div>
                      <h5 class="card-title"><%= profile.prénom.titlecase %> <%= profile.nom.titlecase %></h5>
                      <p class="card-text"><%= profile.ville.titlecase %></p>
                    </div>
                    <div class="mt-3">
                      <% unless profile.friends.any? { |f| f == current_user } %>
                        <% if profile.requested_friends.any? { |f| f == current_user } %>
                          <%= link_to "Pending", add_friend_path(profile), method: :post, class: "disabled btn btn-secondary  " %>
                        <% else %>
                          <%= link_to "Connect", add_friend_path(profile), method: :post, class: "btn btn-success" %>
                        <% end %>

                      <% end %>
                      <%= link_to "View Profile", profile_path(profile), class: "btn btn-link" %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      <% else %>
        <% @profiles.each do |profile| %>
          <% unless profile.agent == current_user.agent%>
          <div class="col-sm-8 offset-lg-0 col-lg-6">
            <div class="card mb-3 border-0" style="border-radius: 15px; box-shadow: 1px 1px 5px rgba(0,0,0,0.2);">
              <div class="row no-gutters", style="border-radius: 30px">
                <div class="col-md-4">
                  <p class="mb-0"><%= image_tag (cl_image_path profile.photo), crop: :fill, style:"object-fit:cover; height: 170px; width: 170px", class: "rounded-circle center p-3" %></p>
                </div>
                <div class="col-md-8 d-flex flex-column justify-content-between">
                  <div class="card-body">
                    <div>
                      <h5 class="card-title"><%= profile.prénom.titlecase %> <%= profile.nom.titlecase %></h5>
                      <p class="card-text"><%= profile.ville %></p>
                    </div>
                    <div class="mt-3">
                      <% unless profile.friends.any? { |f| f == current_user } %>
                        <% if profile.requested_friends.any? { |f| f == current_user } %>
                          <%= link_to "Pending", add_friend_path(profile), method: :post, class: "disabled btn btn-secondary  " %>
                        <% else %>
                          <%= link_to "Connect", add_friend_path(profile), method: :post, class: "btn btn-success" %>
                        <% end %>
                      <% end %>
                      <%= link_to "View Profile", profile_path(profile), class: "btn btn-link" %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    <% end %>
  <% else %>
    <h4>"Sorry, user is not found"</h4>
  <% end %>
</div>

<div
  id="map"
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>
